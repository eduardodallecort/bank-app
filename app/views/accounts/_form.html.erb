<%= form_with model: account do |form| %>

  <table id="customers">
    <tr>
        <th style="text-align: center">Cadastro de Conta</th>
    </tr>
  </table>

  <table id="customers">

    <tr>
        <td><%= form.label "Nome" %></td>
        <td><%= form.text_field :name, :size => "50" %>
            <% @account.errors.full_messages_for(:name).each do |message| %>
              <div><%= message %></div>
            <% end %>
        </td>
    </tr>
    <tr>
        <td><%= form.label "Data de nascimento" %></td>
        <td><%= form.date_field:dt_nasc%>
            <% @account.errors.full_messages_for(:dt_nasc).each do |message| %>
              <div><%= message %></div>
            <% end %>
        </td>
    </tr>
    <tr>
        <td><%= form.label "CPF" %></td>
        <td><%= form.text_field :cpf %>
            <% @account.errors.full_messages_for(:cpf).each do |message| %>
              <div><%= message %></div>
            <% end %>
        </td>
    </tr>
    <tr>
        <td><%= form.label "RG" %></td>
        <td><%= form.text_field :rg%>
            <% @account.errors.full_messages_for(:rg).each do |message| %>
              <div><%= message %></div>
            <% end %>
        </td>
    </tr>
    <tr>
        <td><%= form.label "Senha" %></td>
        <td><%= form.password_field :password %>
            <% @account.errors.full_messages_for(:password).each do |message| %>
              <div><%= message %></div>
            <% end %>
        </td>
    </tr>
  </table>

  <table id="customers">
    <tr>
      <th style="width: 50%; text-align: center">
        <button>
          <%= link_to "Voltar", root_path, class: "form-submit-button"%>
        </button> 
      </th>
      <th style="text-align: center;">
        <%= form.submit "Criar conta" %>
      </th>
    </tr>
  </table>
<% end %>

<style>

#customers {
  font-family: Arial, Helvetica, sans-serif;
  border-collapse: collapse;
  width: 70%;
}

#customers td, #customers th {
  border: 1px solid #ddd;
  padding: 8px;
}

#customers tr:nth-child(even){
    background-color: #f2f2f2;
}

#customers tr:hover {
    background-color: #ddd;
}

#customers th {
  padding-top: 12px;
  padding-bottom: 12px;
  text-align: left;
  background-color: #04AA6D;
  color: white;
}

</style>
